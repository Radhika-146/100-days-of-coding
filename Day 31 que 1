//Search for an element in an array using linear search.

#include <stdio.h>
int main()
{
    int n,s=0;
    printf("enter the num");
    scanf("%d",&n);
    int arr[n];
    
    printf("enter elements:");
    for (int i=0; i<n; i++)
    {
      scanf("%d",&arr[i]);  
    }
    
    int e;
    printf("enter the element: ");
    scanf("%d",&e);
    
    for (int i=0; i<n; i++)
    {
      if(arr[i]==e)
      {
          printf("found at index %d",i);
      }
    }
    if (i==n)
    {
        printf("\n not found");
    }
    
    return 0;
}
