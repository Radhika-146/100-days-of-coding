//Write a program to find the roots of a quadratic equation and categorize them.

#include <stdio.h>
#include <math.h>

int main() {
    int a,b,c;
    printf("enter the coefficients:..");
    scanf("%d%d%d",&a,&b,&c);
    float x1,x2,dis;
    dis=(b*b)-4*a*c;
    x1=(-b+sqrt(dis))/(2*a);
    x2=(-b-sqrt(dis))/(2*a);
    
    if (dis>0)
    {
        printf("Roots are real and different:%f and %f",x1,x2);
    }
    else if (dis=0)
    {
        printf("Roots are real and same:%f",x1);
    }
    else
    {
        printf("Roots are complex");
    }
    return 0;
}
