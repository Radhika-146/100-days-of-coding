//Write a program to find the 1â€™s complement of a binary number and print it.

#include <stdio.h>
void bin(int);

int main() 
{
    int a;
   printf("Enter a binary number:");
   scanf("%d",&a);
   bin(a);
    return 0;
}
void bin(int n)
{
    if(n==0)
    printf("");
    else
    {
        int r=n%10;
        if(r==0)
        {
        bin(n/10);
        printf("1");
        }
        else
        {
         bin(n/10);
        printf("0");
        }
    }
}
