//Search for an element in an array using linear search.

#include <stdio.h>

int main() 
{
    int n;
    printf("Enter size of array:");
    scanf("%d",&n);
    int a[n];
    printf("Enter array elements...");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int e;
    printf("Enter element to be searched...");
    scanf("%d",&e);
    for(int i=0;i<n;i++)
    {
        if(a[i]==e)
        {
        printf("Elemnt found at index %d",i);
        break;
        }
    
    }

    return 0;
}
