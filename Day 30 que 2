//Count positive, negative, and zero elements in an array.
#include <stdio.h>
int main()
{
    //size of array
    int n;
    printf("enter the size of array");
    scanf("%d",&n);
    int arr[n];
    
    //elements of array
    printf("enter the elements:");
    for(int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    
    //counting
    int tp=0,tn=0,tz=0;  //not initial to 0 then consider as string
    for (int i=0; i<n ; i++)
    {
        if (arr[i]>0)
        {
           tp++;
        }
        if (arr[i]<0)
        {
            tn++;
        }
        if (arr[i]==0) //chk
        {
            tz++;
        }
    }
    
    //output
    printf("total positive numbers in array are:%d",tp);
    printf("\ntotal negative numbers in array are:%d",tn);
    printf("\ntotal zeroes in array are:%d",tz);
    return 0;
}
